<% provide(:class_text, 'receive_overtime') %>
<% provide(:button_text, '変更を送信する') %>


<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <% @overtime_requests.each do |key, overtime_requests| %>
      <% @member = User.find(key) %>
        <h1 class="modal-title"><%= User.find(key).name %>からの残業申請</h1>
        <%= form_with(model: @user, url: attendances_update_overtime_user_path(key), local: true, method: :patch) do |f| %>
          <table class="table table-bordered">
              
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>指定勤務終了時間</th>
                <th>時間外時間</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
                <th>変更</th>
                <th>勤怠を確認する</th>
              </tr>
                  
              <tbody>
                <% overtime_requests.each do |day| %>
                  <%
                    day_of_week_color = case $days_of_the_week[day.worked_on.wday]
                      when "土"
                        "text-primary"
                      when "日"
                        "text-danger"
                      end
                  %>
                  <%= f.fields_for "attendances[]", day do |attendance| %>
                  <tr>
                    <td><%= l(day.worked_on, format: :short) %></td>
                    <td class="<%= day_of_week_color %>"><%= $days_of_the_week[day.worked_on.wday]%></td>
                    <td><%= day.estimated_finished_time.strftime("%H:%M") %></td>
                    <td><%= @member.designated_work_end_time.strftime("%H:%M") %></td>
                    <td><%= overtime_calculation(day.estimated_finished_time, day.spread_day, @member.designated_work_end_time) %></td>
                    <td><%= day.job_description %></td>
                    <td><%= attendance.select :status, Attendance.statuses.keys.to_a, {}, class: "form-control" %></td>
                    <td><%= attendance.check_box :change, { class: "check_box" }, true, false %></td>
                    <td><%= link_to "確認",user_path(id: @member, date: day.worked_on), class: "btn btn-primary btn-#{yield(:class_text)}" %></td>
                  </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          <table>
            <div class="footer-button">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
                <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                  キャンセル
                </button>
            </div>
          </table>
        <% end %>
      <% end %>
    </div>
  </div>
</div>