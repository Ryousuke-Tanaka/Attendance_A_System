<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<div class="container">
  <div class="row form-group">
    <div class="col-md-4 col-md-offset-1 csv-group">
      <%= form_tag import_users_path,　method: :post, multipart: true do %>
        <%= file_field_tag :csv_file, id: "csv_file", class: "form-control form-csv" %>
        <%= submit_tag "CSVをインポート", class: "btn btn-block btn-primary btn-csv" %>
      <% end %>
    </div>
    
    <div class="col-md-4 col-md-offset-2" id="search-users">
      <p>ユーザー名検索</p>
      <%= form_with url: search_user_path(@users), method: :get, local: true do |f|  %>
        <%= f.text_field :name, placeholder: "キーワードを入力..." %>
        <%= f.submit "検索", class: " btn-primary" %>
      <% end %>
    </div>
    
    <div class=" row col-md-10 col-md-offset-1">
      <%= will_paginate %>
      <p>
        <% @users.each do |user| %>
          <% if current_user.admin? && !current_user?(user) %>
            <%= user.name %><br>
              <%= link_to "削除", user, method: :delete,
                  data: { confirm: "削除してもよろしいですか？" },
                  class: "btn btn-primary" %><br>
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <button type="button" data-toggle="collapse" data-target="#accordion<%= user.id %>" class="btn  btn-lg btn-primary">編集</button>
                  </h4>
                </div>
                <div id="accordion<%= user.id %>" class="panel-collapse collapse">
                  <div class="panel-body"><%= render 'user', { user: user } %></div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </p>
      <%= will_paginate %>
    </div>
  </div>
</div>