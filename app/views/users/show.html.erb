<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>時間管理表<td>
        指定勤務開始時間<%= format_basic_info(@user.start_work_time) %><br>
        指定勤務終了時間<%= format_basic_info(@user.finish_work_time) %>
      </td>
      <td colspan="3">基本時間<%= format_basic_info(@user.basic_time) %></td>
      <td>初日</td>
    </tr>
    
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数</td>
      <td>締め</td>
    </tr>
  </table>
  <div class="btn-users-shows">
    <%= link_to "勤怠を編集", "#",  class: "btn btn-primary" %>
    <%= link_to "CSV出力", "#", class: "btn btn-primary" %><br>
    <%= link_to "勤怠修正ログ（承認済）", "#", class: "btn btn-primary" %>
  </div>
  
</div>