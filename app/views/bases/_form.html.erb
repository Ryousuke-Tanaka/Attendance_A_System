<%= f.fields_for "bases[]", base do |b| %>
  <%= render 'shared/error_messages', model: f.object %>
  
    <%= b.label :base_id, class: "label-#{yield(:class_text)}" %>
    <%= b.number_field :base_id, class: "form-control" %>
    
    <%= b.label :base_name, class: "label-#{yield(:class_text)}" %>        
    <%= b.text_field :base_name, class: "form-control" %>
     
    <%= b.label :attendance_type, class: "label-#{yield(:class_text)}" %>   
    <%= b.select :attendance_type, class: "form-control" %>
  
  <%= b.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>